@model StudentSystem.Areas.Admin.Models.EditStudentModel
@{
    ViewData["Title"] = "Edit";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Edit An Existing Student</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Edit Student</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Edit An Existing Student</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form class="form-horizontal" method="post" asp-controller="Student"
                          asp-action="Edit" asp-antiforgery="true">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="card-body">
                            <div class="form-group row">
                                <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="Name"
                                           id="name" placeholder=" Student Name">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Address" class="col-sm-2 col-form-label">Address</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="Address" class="form-control"
                                           id="address" placeholder="Address">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="DateOfBirth" class="col-sm-2 col-form-label">DateOfBirth</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="DateOfBirth" class="form-control"
                                           id="birthdate" placeholder="BirthDate">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Roll" class="col-sm-2 col-form-label">Roll</label>
                                <div class="col-sm-10">
                                    <input type="number" asp-for="Roll" class="form-control"
                                           id="roll" placeholder="Roll">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="PhoneNumber" class="col-sm-2 col-form-label">Phone</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="PhoneNumber" class="form-control"
                                           id="phone" placeholder="Phone">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="CGPA" class="col-sm-2 col-form-label">CGPA</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="CGPA" class="form-control"
                                           id="cgpa" placeholder="CGPA">
                                </div>
                            </div>

                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-info">Edit</button>
                            <a asp-action="Index" asp-controller="Student"
                               class="btn btn-default float-right">Cancel</a>
                        </div>
                        <!-- /.card-footer -->
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>